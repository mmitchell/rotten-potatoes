-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: params[:sort] == "title" && "hilite"}= link_to 'Movie Title', movies_path(:sort => 'title'), :id => 'title_header'
      %th{class: params[:sort] == "rating" && "hilite"}= link_to 'rating', movies_path(:sort => 'rating'), :id => 'release_date_header'
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
